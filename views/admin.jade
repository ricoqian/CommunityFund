doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    title Admin
    // Bootstrap Core CSS
    link(href='/css_admin/bootstrap.min.css', rel='stylesheet')
    // Custom CSS
    link(href='/css_admin/sb-admin.css', rel='stylesheet')
    // Morris Charts CSS
    link(href='/css_admin/plugins/morris.css', rel='stylesheet')
    // Custom Fonts
    link(href='/font-awesome/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    // WARNING: Respond.js doesn't work if you view the page via file://
    //if lt IE 9
      script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    #message
          if message
            h1.text-center.error-message #{message}
    #wrapper
      // Navigation
      nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
        // Brand and toggle get grouped for better mobile display
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/admin') Admin
        // Top Menu Items
        ul.nav.navbar-right.top-nav
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              i.fa.fa-user
              |  Admin - A 
              b.caret
            ul.dropdown-menu
              li
                a(href='/admin/logout')
                  i.fa.fa-fw.fa-power-off
                  |  Log Out
        // Sidebar Menu Items - These collapse to the responsive navigation menu on small screens
        // /.navbar-collapse
      #page-wrapper
        .container-fluid
          // Page Heading
          .row
            .col-lg-12
              h1.page-header
                | Admin Page - 
                small Statistics Overview
              ol.breadcrumb
                li.active
                  i.fa.fa-dashboard
                  |  Overview
          .row
            .col-lg-12
              .panel.panel-default
                .panel-heading
                  h3.panel-title
                    i.fa.fa-bar-chart-o.fa-fw
                    | Project Monthly Chart
                .panel-body
                  #morris-area-chart
          // /.row
          .row
            .col-lg-4
              .panel.panel-default
                .panel-heading
                  h3.panel-title
                    i.fa.fa-long-arrow-right.fa-fw
                    |  Category Chart
                .panel-body
                  #morris-donut-chart
            .col-lg-4
              .panel.panel-default
                .panel-heading
                  h3.panel-title
                    i.fa.fa-clock-o.fa-fw
                    |  Tasks Panel
                .panel-body
                  .list-group
                    a.list-group-item
                      span.badge #{totalProj}
                      i.fa.fa-fw.fa-calendar
                      |  Total Project Posted
                    a.list-group-item
                      span.badge #{totalUser}
                      i.fa.fa-fw.fa-comment
                      |  Total User
                    a.list-group-item
                      span.badge #{ps} minutes ago
                      i.fa.fa-fw.fa-truck
                      |  Newest Project
                    a.list-group-item
                      span.badge #{us} minutes ago
                      i.fa.fa-fw.fa-user
                      |  Newest User
                    a.list-group-item
                      span.badge #{i}
                      i.fa.fa-fw.fa-globe
                      |  Initiators
                    a.list-group-item
                      span.badge #{f}
                      i.fa.fa-fw.fa-check
                      |  Founders
            .col-lg-4
              .panel.panel-default
                .panel-heading
                  h3.panel-title
                    i.fa.fa-money.fa-fw
                    |  User Distribution Chart
                .panel-body
                  #morris-bar-chart
          // /.row
        // /.container-fluid
      // /#page-wrapper
    // /#wrapper
    // jQuery
    script(src='/js_admin/jquery.js')
    // Bootstrap Core JavaScript
    script(src='/js_admin/bootstrap.min.js')
    // Morris Charts JavaScript
    script(src='/js_admin/plugins/morris/raphael.min.js')
    script(src='/js_admin/plugins/morris/morris.min.js')
    script.
      // Morris.js Charts sample data for SB Admin template
      $(function() {
      // Area Chart
      Morris.Area({
      element: 'morris-area-chart',
      data: [{
      period: '2015-01',
      projects: #{date1}
      }, {
      period: '2015-02',
      projects: #{date2}
      }, {
      period: '2015-03',
      projects: #{date3}
      }, {
      period: '2015-04',
      projects: #{date4}
      }, {
      period: '2015-05',
      projects: #{date5}
      }],
      xkey: 'period',
      ykeys: ['projects'],
      labels: ['projects'],
      pointSize: 10,
      hideHover: 'auto',
      resize: true
      });
      // Donut Chart
      Morris.Donut({
      element: 'morris-donut-chart',
      data: [{
      label: "Software",
      value: #{software}
      }, {
      label: "Hardware",
      value: #{hardware}
      }, {
      label: "Arts",
      value: #{arts}
      }, {
      label: "Design",
      value: #{design}
      }, {
      label: "entertainment",
      value: #{entertainment}
      }, {
      label: "healthcare",
      value: #{healthcare}
      }],
      resize: true
      });
    
      // Bar Chart
      Morris.Bar({
      element: 'morris-bar-chart',
      data: [{
      Community: 'Software',
      User: #{usr1}
      }, {
      Community: 'Hardware',
      User: #{usr2}
      }, {
      Community: 'Arts',
      User: #{usr3}
      }, {
      Community: 'Design',
      User: #{usr4}
      }, {
      Community: 'Entertainment',
      User: #{usr5}
      }, {
      Community: 'Healthcare',
      User: #{usr6}
      }],
      xkey: 'Community',
      ykeys: ['User'],
      labels: ['User'],
      barRatio: 0.4,
      xLabelAngle: 35,
      hideHover: 'auto',
      resize: true
      });
      });
