      div(style=' clear: both; text-align:center; position: relative;')
        a(href='http://windows.microsoft.com/en-US/internet-explorer/products/ie/home?ocid=ie6_countdown_bannercode')
          img(src='http://storage.ie6countdown.com/assets/100/images/banners/warning_bar_0000_us.jpg', border='0', height='42', width='820', alt='You are using an outdated browser. For a faster, safer browsing experience, upgrade for free today.')
      script(src='js/html5shiv.js')
      link(rel='stylesheet', type='text/css', media='screen', href='css/ie.css')
  body
    .page
      //
        ========================================================
        HEADER
        =========================================================
      header#header
        .brand.put-center
          h1
            a(href='index')
              img(src='images/logo_updated.jpg', alt='Cappifando', width='220', height='100')
        #stuck_container
          .container
            .row
              .grid_12
                nav.nav.put-left
                  ul.sf-menu
                    li
                      a(href='searchproject') Projects
                      ul
                        li
                          a(href='#') Design
                        li
                          a(href='#') Art
                        li
                          a(href='#') Software
                        li
                          a(href='#') Hardware
                    li
                      a(href='contacts') About Us
                nav.nav.put-right
                  ul.sf-menu
                    li
                      form.navbar-form.navbar-right(role='search')
                        .form-group
                          input.form-control(type='text', placeholder='Search')
                        button#headerSearchButton.btn.btn-default(type='submit')
                          a(href='searchproject')
                            span.glyphicon.glyphicon-search
                    // <li class="current"><a href="services">Services</a></li>
                    li
                      a(href='login') Log in
                    li
                      a(href='signup') Sign up
      //
        ========================================================
        CONTENT
        =========================================================
      section#content
        #form
          //
            <ul id="tab-group">
            <li id="tab active"><a href="#signup">Sign Up</a></li>
            <li id="tab"><a href="#login">Log In</a></li>
            </ul>
          #tab-content
            h1 Welcome Back!
            form(action='/users/session', method='post')
              .field-wrap
                label
                  span.req._placeholder
                input(name='email' type='email', placeholder='Email Address', required='', autocomplete='off')
              .field-wrap
                label
                  span.req._placeholder
                input(name='password' signup='password' type='password', placeholder='Password', required='', autocomplete='off')
              p.forgot
                a(href='#') Forgot Password?
              button(id='buttonlogin button-block')
                | Log In
            #message
              if message
                h1.text-center.error-message #{message} 
        // tab-content
    // /form
    //
      ========================================================
      FOOTER
      =========================================================
    footer#footer.color_9
      .container
        .row
          .grid_12
            p.info.text_4.color_4
              | ï¿½ 
